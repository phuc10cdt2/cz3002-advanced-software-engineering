extends layout

block content
    div.container
        div.col-sm-6.col-md-4.col-md-offset-4
            form(class='form-signin', action='/signin', method='POST')
                h2.text-center(class = 'form-signin-heading') Please sign in
                lable(for = 'inputEmail', class = 'sr-only') Email
                input(type='email', name='username', id = 'inputEmail', class='form-control', placeholder='Email',required, autofocus)
                lable(for = 'inputEmail', class = 'sr-only') Password
                input(type='password', name='password', id = 'inputPassword', class='form-control', placeholder='Password', required)
                button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
                #message
                    if message
                        h5.text-center.error-message #{message}
                div.signup-link.text-center
                    a(href = "/signup") Sign up
